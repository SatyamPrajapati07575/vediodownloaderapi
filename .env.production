# ===========================================
# PRODUCTION ENV - DOWNLOADERYAAR
# ===========================================

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration (Use production DB URI)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/downloaderYaar?retryWrites=true&w=majority&appName=Cluster0

# Security Configuration
JWT_SECRET=change-this-to-a-very-secure-random-key
CORS_ORIGIN=https://downloaderyaar.com

# Download Configuration
MAX_FILE_SIZE=100MB
DOWNLOAD_TIMEOUT=30000
TEMP_DIR=./downloads

# YouTube-DL Configuration (optional)
# YOUTUBE_DL_PATH=/usr/local/bin/youtube-dl

# Rate Limiting (e.g. 100 requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=./logs/app.log

# External API Keys (add if required)
# YOUTUBE_API_KEY=your-production-youtube-api-key
# INSTAGRAM_API_KEY=your-production-instagram-api-key
# FACEBOOK_API_KEY=your-production-facebook-api-key

# Cookie Configuration (if scraping Instagram/Facebook)
COOKIES_PATH=./cookies.txt

# File Storage Configuration (S3 recommended for prod)
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=downloaderyaar-files
AWS_REGION=us-east-1

# Redis (optional, for caching/session)
# REDIS_URL=redis://<host>:<port>
# REDIS_PASSWORD=your-redis-password

# Email Configuration (for contact, support, notifications)
# EMAIL_HOST=smtp.yourdomain.com
# EMAIL_PORT=587
# EMAIL_USER=your@email.com
# EMAIL_PASS=your-email-password

# Monitoring & Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://your-dsn@sentry.io/project-id

# Development/Debug Settings
DEBUG=false
VERBOSE_LOGGING=false

